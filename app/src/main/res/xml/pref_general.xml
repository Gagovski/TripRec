<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/key_recorden"
        android:summary="@string/pref_description_record_enable"
        android:title="@string/pref_title_record_enable" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/key_override_en"
        android:summary="@string/pref_description_override_enable"
        android:title="@string/pref_title_override_enable" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
        <ListPreference
        android:defaultValue="60"
        android:entries="@array/pref_recordtime_list_titles"
        android:entryValues="@array/pref_recordtime_list_values"
        android:key="@string/key_recordtime"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_recordtime" />

    <ListPreference
        android:defaultValue="100"
        android:entries="@array/pref_max_videofile_list_title"
        android:entryValues="@array/pref_max_videofile_list_value"
        android:key="@string/key_max_videofiles"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_max_videofile_count" />

</PreferenceScreen>
